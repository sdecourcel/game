
<div class="wrapper">
  <div class="container_show">
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <div class="content_show">

            <div class="col-xs-12 banner_head">
              <h1><%= @event.title %></h1>
                <h4><% if @event.canceled_at %>
                <%= "EVENT CANCELLED" %>
                <% else %>
                <% "" %>
                <% end %></h4>
              <div class="eventgame">
                <p><%= @event.game %></p>
              </div>
              <div class="organiser">
                <p> Created by <%=@event.user.firstname + ", " + @event.user.lastname.split(//).first%></p>
                <%= image_tag @event.user.facebook_picture_url, class: "avatar-large" %>
              </div>
            </div>

          <div class="row">
            <div class="col-xs-12">
              <div class="date">
                <h4> occuring the <%=@event.happen_at.strftime("%A %v") %></h4>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="eventdescription">
                <div class="col-xs-6">
                <p> organiser spirit: </p>
                </div>
                <div class="col-xs-6">
                <p><%= @event.description %></p>
                </div>
              </div>
            </div>
          </div>
          <% if @event.photos? %>
          <% @event.photos.each do |photo|%>
          <%= cl_image_tag photo.path, width: 100, height: 100, crop: :fill %>
            <% end %>
          <% end %>
          <div class="row">
            <div class="col-xs-12">
              <% if current_user == @event.user %>
              <% end %>
              <% if current_user != @event.user %>
              <%= link_to 'Send interest', participations_path(@event, @participation, participation: {status: :confirmed}), method: :post, class: "btn-btn-medium"%>
              <% end %>
              <% if current_user == @event.user %>
              <%= link_to 'Cancel event', edit_event_path(@event), class: "btn-declined" %>
              <% end %>
              <%= link_to 'List of events', myevents_events_path(@event), class: "btn-declined" %>
              <%= link_to 'Manage my events', myevents_events_path(@event), class: "btn-declined" %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="container_map_show">
          <img class="google_map" src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @event.address %>&zoom=14&scale=false&size=300x300&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:0xff0000%7Clabel:%7C<%= @event.address %>&key=<%= ENV['GOOGLE_API_KEY'] %>">
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
