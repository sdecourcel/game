
<div class=container>
  <div class=row>
    <div class="container_event_description">
      <div class="col-xs-12 col-md-6">
        <h1><%= @event.title %><h1>
        <h4><% if @event.canceled_at %>
          <%= "EVENT CANCELLED" %>
        <% else %>
          <% "" %>
        <% end %></h4>
        <h3><%= @event.game %></h3>
        <h2>an event created by <%=@event.user.firstname + ", " + @event.user.lastname.split(//).first%></h2>
        <h4> occuring the <%=@event.happen_at.strftime("%A %v") %></h4>

        <p> organiser spirit: </p>
        <p><%= @event.description %></p>

        <% if current_user != @event.user %>
         <%= link_to 'Send interest', participations_path(@event, @participation, participation: {status: :pending}), method: :post, class: "btn-btn-medium"%>
        <% end %>

        <% if current_user == @event.user %>
        <%= link_to 'Cancel event', edit_event_path(@event), class: "btn-declined" %>
        <% end %>
        <%= link_to 'Back to myevents', myevents_events_path(@event), class: "btn-declined" %>
      </div>
    </div>
      <div class="container_map_show">
        <div class="col-xs-12 col-md-6">
          <img class="google_map" src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @event.address %>&zoom=13&scale=false&size=600x300&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:0xff0000%7Clabel:%7C<%= @event.address %>&key=<%= ENV['GOOGLE_API_KEY'] %>">
        </div>
      </div>
  </div>
</div>

