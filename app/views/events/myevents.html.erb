
<div class="navbar_myevents">
  <div class="left_side_myevents">
    <div class="logo_myevents">
      <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "game.svg" %>
      <% end %>
    </div>
  <div class="tabs">
        <a class="tab active" data-target="#yourevent">
          <p>Your events</p>
        </a>
      <a class="tab" data-target="#participation">
        <p>Your participations</p>
      </a>
      <a class="tab" data-target="#cancelled_event">
        <p>Deleted events</p>
      </a>
    </div>
  </div>
  <div class="right_side_myevents">
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <% if user_signed_in? %>
        <!-- Notification -->
        <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <% end %>
        <!-- Profile picture and dropdown -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to "#myevents", myevents_events_path do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "My events") %>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <!-- Login text link -->
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
      </div>
  </div>
</div>



<div class="wrapper-myevents">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <div class="tab-content" id="yourevent">
            <% @events.each do |event| %>
            <div class="col-xs-12 col-md-6">
              <div class="card ">
                <div class="card-category">
                  <p><%= event.happen_at.strftime("%A %v") %></p>
                </div>
                <div class="card-user">
                  <%= event.user.firstname %>
                </div>
                <div class="card-description">
                 <h2><%= event.game.capitalize %></h2>
                 <p><%= event.address %></p>
                </div>
                 <%= link_to "", event_path(event), class: "card-link" %>
              </div>
            </div>
          <% end %>
        </div>
    <div class="tab-content hidden" id="participation">

        </div>
    <div class="tab-content hidden" id="cancelled_event">
          <% @cancelled_events.each do |cancelled_event| %>
            <div class="col-xs-12 col-md-6">
              <div class="card ">
                <div class="card-category">
                  <p><%= cancelled_event.happen_at.strftime("%A %v") %></p>
                </div>
                <div class="card-user">
                  <%= cancelled_event.user.firstname %>
                </div>
                <div class="card-description">
                 <h2><%= cancelled_event.game.capitalize %></h2>
                 <p><%= cancelled_event.address %></p>
                </div>
                 <%= link_to "", event_path(cancelled_event), class: "card-link" %>
              </div>
            </div>
          <% end %>
    </div>
  </div>
      <div class="myevents-location col-md-5">
        <div class="google-map-myevents" >
          <div id="map" style="width: 100%; height: 900px;">
            <% content_for(:after_js) do %>
              <%= javascript_tag do %>
                $(document).ready(function() {
                  var handler = Gmaps.build('Google');
                  handler.buildMap({
                    zoomControl: true,
                    zoomControlPosition: {position: google.maps.ControlPosition.BOTTOM_CENTER
                    },
                  internal: { id: 'map' } }, function() {
                    markers = handler.addMarkers(<%= raw @hash.to_json %>);
                    handler.bounds.extendWith(markers);
                    handler.fitMapToBounds();
                    if (markers.length == 0) {
                      handler.getMap().setZoom(20);
                    } else if (markers.length == 1) {
                      handler.getMap().setZoom(20);
                    }
                  });
                });
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
