
<div class="container_search_bar">
  <div class="logo">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
  </div>
  <div class="search_bar">
    <%= simple_form_for :search, url: events_path, method: :get, html: { class: "form-inline" } do |f| %>
    <%= f.input :game, placeholder: 'Choose a game' %>
    <%= f.input :happen_at, placeholder: 'Choose when' %>
    <%= f.input :address, placeholder: 'Select location' %>
    <%= f.submit "Find", :class => "btn btn" %>
    <% end %>
  </div>
</div>

<h1>List of events</h1>

<div class="container">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card ">
          <div class="card-category">
            <p><%= event.happen_at.strftime("%A %v") %></p>
          </div>
          <div class="card-user">
            <%= event.user.firstname %>
          </div>
          <div class="card-description">
           <h2><%= event.game.capitalize %></h2>
           <p><%= event.address %></p>
          </div>
           <%= link_to "", event_path(event), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

